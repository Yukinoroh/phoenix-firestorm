<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel name="panel_snapshot_local">
	<text name="title">Disc</text>
	<combo_box label="Resolució" name="local_size_combo">
		<combo_box.item label="Finestra actual" name="CurrentWindow"/>
		<combo_box.item label="Personalitzada" name="Custom"/>
	</combo_box>
	<spinner label="Amplada x Alçada" label_width="100" width="150" name="local_snapshot_width"/>
	<spinner width="50" name="local_snapshot_height"/>
	<check_box label="Conserva les proporcions" name="local_keep_aspect_check"/>
	<text name="local_format_label">Format:</text>
	<combo_box label="Format" name="local_format_combo">
		<combo_box.item label="PNG (Sense pèrdua)" name="PNG"/>
		<combo_box.item label="JPEG" name="JPEG"/>
		<combo_box.item label="BMP (Sense pèrdua)" name="BMP"/>
	</combo_box>
	<slider label="Qualitat:" name="image_quality_slider"/>
	<check_box name="local_remember_location_sessions" label="Conserva la ubicació/nom del fitxer"/>
	<check_box label="Inclou data/hora al nom del fitxer" name="local_use_timestamp"/>
	<button label="&#x25B6; Selecció" name="cancel_btn"/>
	<flyout_button label="Desa" name="save_btn" tool_tip="Desa la imatge com a fitxer">
		<flyout_button.item label="Desa" name="save_item"/>
		<flyout_button.item label="Desa com a..." name="saveas_item"/>
	</flyout_button>
</panel>
