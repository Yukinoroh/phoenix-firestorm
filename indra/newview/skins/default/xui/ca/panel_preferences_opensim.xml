<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<panel label="Opensim" name="opensim_panel">
	<tab_container label="Opensim" name="tabs">
		<panel label="Gestor de Graelles" name="grid_management_panel">
			<text name="add_grid_text">Afegeix una nova Graella</text>
			<line_editor name="add_grid" label="Introdueix l'URI de connexió"/>
			<button label="Esborra" label_selected="Esborra" name="clear_grid"/>
			<button label="Afegeix" name="apply_new_grid"/>
			<text name="add_grid_text">Gestiona les Graelles</text>
			<scroll_list name="grid_list">
				<scroll_list.columns label="Nom de la Graella" name="grid_label"/>
				<scroll_list.columns label="Adreça de connexió" name="login_uri"/>
			</scroll_list>
			<button label="Actualitza" name="refresh_grid"/>
			<button label="Suprimeix" name="remove_grid"/>
			<panel name="advanced_grid_panel">
				<text name="grid_name_text">Nom de la Graella:</text>
				<text name="grid_uri_text">Adreça:</text>
				<text name="login_page_text">Adreça de connexió:</text>
				<button label="Desa" name="save_grid"/>
				<text name="helper_uri_text">Assistència:</text>
				<text name="website_text">Lloc Web:</text>
				<text name="support_text">Suport:</text>
				<text name="register_text">Registre:</text>
				<text name="password_text">Contrasenya oblidada:</text>
				<text name="search_text">Cerca:</text>
				<text name="message_text">Missatge del dia:</text>
			</panel>
		</panel>
		<panel label="Diversos" name="opensim_misc_panel">
			<check_box label="Cerca de depuració" name="DebugSearch"/>
			<text name="search_url_debug_text">Sobreescriu la pàgina de cerca actual: (Inactiu si és buit)</text>
			<button label="Esborra" label_selected="Esborra" name="clear_search_url_debug"/>
			<button label="Defineix" name="pick_current_search_url"/>
		</panel>
	</tab_container>
</panel>
