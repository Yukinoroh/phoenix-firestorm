<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<floater name="ColorPicker" title="Paleta de colors">
	<tab_container name="scale_type_container">
		<panel name="RGB" label="RVB">
			<text name="r_val_text">Vermell :</text>
			<text name="g_val_text">Verd :</text>
			<text name="b_val_text">Blau :</text>
		</panel>
		<panel name="LSL" label="LSL">
			<text name="r_val_text_lsl">Vermell :</text>
			<text name="g_val_text_lsl">Verd :</text>
			<text name="b_val_text_lsl">Blau :</text>
		</panel>
		<panel name="Hex" label="Hexa">
			<text name="hex_text">Codi Hexa (#rrvvbb):</text>
		</panel>
	</tab_container>
	<text name="h_val_text">To :</text>
	<text name="s_val_text">Saturació :</text>
	<text name="l_val_text">Lluminositat :</text>
	<check_box label="Aplicar" name="apply_immediate"/>
	<button label="Copiar LSL" tool_tip="Copia el valor de color en un format LSL (&lt;r, g, b&gt;)." name="copy_lsl_btn"/>
	<button label="Anul·lar" label_selected="Anul·lar" name="cancel_btn"/>
	<text name="Current color:">^ Color actual ^</text>
	<text name="(Drag below to save.)">Arrosega per desar</text>
</floater>
